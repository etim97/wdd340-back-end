<!doctype html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1>Add Inventory Item</h1>

  <% if (message && message.length) { %>
    <div class="flash"><%= message %></div>
  <% } %>

  <% if (errors && errors.length) { %>
    <ul class="errors">
      <% errors.forEach(e => { %>
        <li><%= e.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <form action="/inv/add-inventory" method="post" novalidate>
    <div>
      <label for="classificationList">Classification</label>
      <%- classificationList %>  <!-- unescaped: classificationList contains HTML select -->
    </div>

    <div>
      <label for="invMake">Make</label>
      <input name="inv_make" id="invMake" type="text" required maxlength="50" value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">
    </div>

    <div>
      <label for="invModel">Model</label>
      <input name="inv_model" id="invModel" type="text" required maxlength="50" value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">
    </div>

    <div>
      <label for="invYear">Year</label>
      <input name="inv_year" id="invYear" type="number" required min="1886" max="3000" value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">
    </div>

    <div>
      <label for="invPrice">Price</label>
      <input name="inv_price" id="invPrice" type="number" step="0.01" required min="0" value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">
    </div>

    <div>
      <label for="invMiles">Mileage</label>
      <input name="inv_miles" id="invMiles" type="number" step="0.1" min="0" value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">
    </div>

    <div>
      <label for="invDescription">Description</label>
      <textarea name="inv_description" id="invDescription" required maxlength="1000"><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
    </div>

    <div>
      <label for="invImage">Image path</label>
      <input name="inv_image" id="invImage" type="text" value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/no-image-available.png' %>">
    </div>

    <div>
      <label for="invThumbnail">Thumbnail path</label>
      <input name="inv_thumbnail" id="invThumbnail" type="text" value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/no-image-available-tn.png' %>">
    </div>

    <button type="submit">Add Vehicle</button>
  </form>
</body>
</html>
