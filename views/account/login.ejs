<%- include("../partials/header") %>

<main class="form-container">
  <h1><%= title %></h1>

  <% if (message) { %>
    <div class="message"><%= message %></div>
  <% } %>

  <form action="/account/login" method="POST" class="auth-form">
    <label for="email">Email Address</label>
    <input type="email" id="email" name="account_email" value="<%= locals.account_email || '' %>" required>

    <label for="password">Password</label>
    <input type="password" id="password" name="account_password" required>

    <button type="submit">Login</button>
  </form>

  <p>Donâ€™t have an account? <a href="/account/register">Register here</a>.</p>
</main>


