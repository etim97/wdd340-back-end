<%- include("../partials/head") %>
<%- include("../partials/header") %>

<main class="account-management">
  <h1>Account Management</h1>

  <% if (locals.account_firstname) { %>
    <p>Welcome, <strong><%= locals.account_firstname %></strong>!</p>
  <% } %>

  <% if (message && message.length > 0) { %>
    <p class="flash-message"><%= message %></p>
  <% } %>

  <section class="account-options">
    <h2>Manage Your Account</h2>
    <ul>
      <li><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></li>
      <li><a href="/account/logout">Logout</a></li>
    </ul>
  </section>

  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
  <section class="inventory-access">
    <h2>Inventory Management</h2>
    <ul>
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
    </ul>
  </section>
  <% } %>
</main>

<%- include("../partials/footer") %>
